@page "/Profile"
@model HouseCare.Pages.MaintenancePersonnel.ProfileModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="css/MaintenancePersonnel/Profile.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                <div class="sidenav">
                    <a id="request" href="/MaintenanceRequests">Maintenance Requests</a>
                    <a id="profile" href="/Profile">My Profile</a>

                </div>
            </div>
        </div>
    </div>

    <div class="container1">
        <h2>Profile</h2>
        <form method="post">
            <div class="form-group">
                <!-- Display the profile image -->
                <img src="~/Assets/Images/Personnel/@Model.Personnel.Image" alt="Profile Image" class="img-thumbnail" />
                <!-- Allow users to change the profile image if needed -->
                <input type="file" id="profileImage" name="ProfileImage" accept="image/*" />
            </div>

            <div class="form-group">
                <label for="firstName">First Name</label>
                <input type="text" id="firstName" name="FirstName" class="form-control" value="@Model.Personnel.FirstName" />
            </div>

            <div class="form-group">
                <label for="lastName">Last Name</label>
                <input type="text" id="lastName" name="LastName" class="form-control" value="@Model.Personnel.LastName" />
            </div>

            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="Email" class="form-control" value="@Model.Personnel.Email" />
            </div>

            <div class="form-group">
                <label for="phoneNumber">Phone Number</label>
                <input type="tel" id="phoneNumber" name="PhoneNumber" class="form-control" value="@Model.Personnel.Phone" />
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</body>
</html>
