@page "/Profile"
@model HouseCare.Pages.MaintenancePersonnel.ProfileModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="css/MaintenancePersonnel/Profile.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                <div class="sidenav">
                    <a id="request" href="/MaintenanceRequests">Maintenance Requests</a>
                    <a id="profile" href="/Profile">My Profile</a>

                </div>
            </div>
        </div>
    </div>



    <div class="subcontainer">
        <p>
            Here is your profile page where you can find all your personal information.<br />You can edit your information whenever you want<br />
        </p>
        <div class="custom">
            <div class="row">
                <div class="col-lg-9 mx-auto rounded border p-3 custom-border">
                    <form method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <!-- Display the profile image -->
                            <div class="personnelimage">
                                <img src="~/Assets/Images/Personnel/@Model.Personnel.Image" alt="Profile Image" class="img-thumbnail" />
                            </div>
                            <!-- Allow users to change the profile image if needed -->
                        </div>
                        <input type="file" class="form-control" id="profileImage" name="Personnel.ImageFile" accept="image/*" />

                        <div class="form-group" style="padding-top:5%;">
                            <label for="firstName" style="padding-bottom:2%; color:#db3e7c;">First Name</label>
                            <input type="text" id="firstName" name="Personnel.FirstName" class="form-control" value="@Model.Personnel.FirstName" />
                        </div>

                        <div class="form-group">
                            <label for="lastName" style="padding-bottom:2%; color:#db3e7c;">Last Name</label>
                            <input type="text" id="lastName" name="Personnel.LastName" class="form-control" value="@Model.Personnel.LastName" />
                        </div>

                        <div class="form-group">
                            <label for="email" style="padding-bottom:2%; color:#db3e7c;">Email</label>
                            <input type="email" id="email" name="Personnel.Email" class="form-control" value="@Model.Personnel.Email" />
                        </div>

                        <div class="form-group">
                            <label for="phoneNumber" style="padding-bottom:2%; color:#db3e7c;">Phone Number</label>
                            <input type="tel" id="phoneNumber" name="Personnel.Phone" class="form-control" value="@Model.Personnel.Phone" />
                        </div>

                        <button type="submit" class="btn btn-secondary custom-button">Save</button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</body>
</html>
