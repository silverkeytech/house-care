@page "/ListOfPersonnel"
@model HouseCare.Pages.Guest.ListOfPersonnelModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="css/Guest/ListOfPersonnel.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
</head>
<body>
    <div class="subcontainer" >
        <p>Your request has been submitted!</p>
        <p>
            Here are our available maintenance personnel , feel free to choose and  contact any of them.<br />
        </p>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                <!-- Sidebar -->
                <div class="sidenav">
                    <a href="/MaintenanceServices">Home Page</a>
                </div>
            </div>
        </div>
    </div>
     @foreach (var item in Model.AvailablePersonnel)
    {
        <div class="card mb-4 border-secondary">
            <div class="row g-0" style="padding: 0;">

                <div class="col-md-4 col-12 myimage" >
                    <img id="overlap" class="img-fluid rounded" style="object-fit: fill;" src="~/Assets/Images/Personnel/@item.Image" />
                </div>
                <div class="col-md-8 col-12 mypar" >
                    <div class="card-body mybody" >
                        <p class="card-text">
                            Name: @item.FirstName @item.LastName <br />
                            Field of work: @item.FieldOfWork <br />
                            Areas of operation : 
                            @foreach(var area in item.AreasOfOperation)
                            {
                                if (area.Equals(item.AreasOfOperation.Last()))
                                {
                                    <span>@area.Name</span>
                                }
                                else
                                {
                                    <span>@area.Name ,</span>
                                }
                            }
                        </p>
                        <form method="post" style="margin-top: 2%;">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-success">Accept</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        
    }
</body>
</html>

