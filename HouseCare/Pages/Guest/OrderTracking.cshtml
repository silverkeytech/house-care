@page "/OrderTracking"
@model HouseCare.Pages.Guest.OrderTrackingModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="css/Guest/OrderTracking.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</head>
 <body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                <!-- Sidebar -->
                <div class="sidenav">
                    <a href="/MaintenanceServices">Home Page</a>
                </div>
            </div>
        </div>
    </div>

    <div class="subcontainer">
        <p>Keep track of your maintenance request</p>
    </div>
    <div class="container">
        <div class="table">
            <table class="table table-striped table-hover desktop-table">
                <thead >
                    <tr>
                        <th>Request Date</th>
                        <th>Request Category</th>
                        <th>Description</th>
                        <th>Request Status</th>
                        <th>Arrival Date</th>
                        <th>Assigned to</th>
                        <th>Phone number</th>
                    </tr>
                </thead>
                <tbody id="myTable">
                    <tr>
                        <td>@Model.RecentRequest.AssignedDate</td>
                        <td>@Model.RecentRequest.RequestCategory</td>
                        <td style="max-width: 300px; word-wrap: break-word;">@Model.RecentRequest.Description</td>
                        <td>@Model.RecentRequest.RequestStatus</td>
                        <td>@Model.RecentRequest.RequestDate.ToString("d")</td>
                        <td>@Model.RecentRequest.AssignedTo.FirstName @Model.RecentRequest.AssignedTo.LastName</td>
                        <td>@Model.RecentRequest.AssignedTo.Phone</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    
     
 </body>
</html>



